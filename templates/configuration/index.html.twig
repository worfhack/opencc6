{% extends "layout.html.twig" %}

{% block content %}
    <h1>Configuration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Label</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td>{{ configuration.id }}</td>
                <td>{{ configuration.name }}</td>
                <td>{{ configuration.label }}</td>
                <td>{{ configuration.value }}</td>
                <td>
                    <a href="{{ path('configuration_show', {'id': configuration.id}) }}">show</a>
                    <a href="{{ path('configuration_edit', {'id': configuration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('configuration_new') }}">Create new</a>
{% endblock %}
